<p id="notice" class="w3-panel"><%= notice %></p>

<div class="w3-panel w3-green">

<table class="w3-table-all">
<thead>
  <tr>
    <th><h1>cart</h1></th>
    <th></th>

  </tr>
</thead>

<tbody>

<div class="panel-body">
 <table class="table table-responsive">
    
    <% @cart.line_items.each do |item| %>
    <tr>
    <td><%= item.quantity %> &times; </td><td><%= item.product.title %></td><td><%= number_to_currency(item.total_price) %></td>
    </tr>
    <% end %>
    <tr>
    <td colspan="2">Total Order Value </td><td><%= number_to_currency(@cart.total_price) %></td>
    </tr>
 </table>
</div>

<tr>
<td>
<%= link_to 'Edit', edit_cart_path(@cart), class:"w3-button w3-green" %> 
<%= button_to "Checkout", new_order_path, method: :get, class:"w3-button w3-green" %>
<%= button_to 'Empty cart', @cart, method: :delete, data: { confirm: 'Are you sure?' } , class:"w3-button w3-green" %>
<%= link_to 'Back', carts_path , class:"w3-button w3-green" %>
<%= link_to 'Keep Shopping', store_index_url , class:"w3-button w3-green" %>
</td>
</tr>
</table>
</tbody>
</div>
